<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Fragment.DanaKelolaanFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linear_information_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintWidth="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="5sp"
            android:background="@drawable/custom_bg_surface"
            android:layout_margin="@dimen/margin_side">
            <ImageView
                android:layout_width="12sp"
                android:layout_height="12sp"
                android:src="@drawable/ic_compare_one"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/textview_percent_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-2,20%"
                android:textSize="@dimen/font_title_grid"
                android:lineSpacingExtra="4sp"
                android:layout_marginLeft="4sp"
                android:textColor="@color/black"/>

            <ImageView
                android:layout_width="12sp"
                android:layout_height="12sp"
                android:src="@drawable/ic_compare_two"
                android:layout_marginLeft="10sp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/textview_percent_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-2,20%"
                android:textSize="@dimen/font_title_grid"
                android:lineSpacingExtra="4sp"
                android:layout_marginLeft="4sp"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/image_view_percent_three"
                android:layout_width="12sp"
                android:layout_height="12sp"
                android:src="@drawable/ic_compare_three"
                android:layout_marginLeft="10sp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/textview_percent_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-2,20%"
                android:textSize="@dimen/font_title_grid"
                android:lineSpacingExtra="4sp"
                android:layout_marginLeft="4sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/textview_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Senin, 20 Jun 2022"
                android:textSize="@dimen/font_title_grid"
                android:lineSpacingExtra="4sp"
                android:layout_marginLeft="10sp"
                android:textColor="@color/black_60"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_graph"
            android:layout_width="match_parent"
            android:layout_height="250sp"
            app:layout_constraintTop_toBottomOf="@id/linear_information_result">

            <com.product.managefund.CustomView.CustomChart
                android:id="@+id/line_chart_graph"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:chart_line_size="1dp"
                app:chart_padding_bottom="40dp"
                app:chart_padding_left="20dp"
                app:chart_padding_right="20dp"
                app:chart_padding_top="20dp"
                android:layout_marginLeft="@dimen/margin_side"
                android:layout_marginRight="@dimen/margin_side"
                android:layout_marginTop="@dimen/margin_side"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintBottom_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constrainedHeight="false"/>

            <ProgressBar
                android:id="@+id/progress_bar_graph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:progressTint="@color/green_50"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs_range_periode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabSelectedTextColor="@color/green"
            app:tabTextColor="@color/gray"
            app:tabIndicatorColor="@color/green"
            app:tabTextAppearance="@style/tab_text"
            android:layout_marginLeft="@dimen/margin_side"
            android:layout_marginRight="@dimen/margin_side"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/container_graph"
            app:tabGravity="fill"
            app:tabMode="fixed"
            android:elevation="0dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/surface"
            android:layout_marginTop="@dimen/margin_side"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tabs_range_periode"
            android:paddingBottom="@dimen/margin_side">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linear_product_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/container_product_name_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/margin_side"
                        android:background="@drawable/custom_bg_green"
                        android:layout_margin="8dp">

                        <ImageView
                            android:id="@+id/image_view_item_one"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:src="@drawable/ic_launcher_background"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textview_name_one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:textSize="@dimen/font_title_grid"
                            android:textColor="@color/black"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/image_view_item_one"
                            android:maxLines="3"
                            android:ellipsize="end"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/container_product_name_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/margin_side"
                        android:background="@drawable/custom_bg_violet"
                        android:layout_margin="8dp">

                        <ImageView
                            android:id="@+id/image_view_item_two"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:src="@drawable/ic_launcher_background"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textview_name_two"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:textSize="@dimen/font_title_grid"
                            android:textColor="@color/black"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/image_view_item_two"
                            android:maxLines="3"
                            android:ellipsize="end"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/container_product_name_three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/margin_side"
                        android:background="@drawable/custom_bg_navy"
                        android:layout_margin="8dp">

                        <ImageView
                            android:id="@+id/image_view_item_three"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:src="@drawable/ic_launcher_background"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textview_name_three"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:textSize="@dimen/font_title_grid"
                            android:textColor="@color/black"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/image_view_item_three"
                            android:maxLines="3"
                            android:ellipsize="end"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/textview_title_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jenis Reksa Dana"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linear_product_name"
                android:layout_marginLeft="@dimen/margin_side"
                android:layout_marginRight="@dimen/margin_side"
                android:textSize="@dimen/font_title_grid"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linear_type_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textview_title_type">
                <RelativeLayout
                    android:id="@+id/relative_container_type_product_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/custom_bg_green"
                    android:padding="8sp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp">

                    <TextView
                        android:id="@+id/textview_type_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_title_grid" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relative_container_type_product_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/custom_bg_violet"
                    android:padding="8sp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp">

                    <TextView
                        android:id="@+id/textview_type_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_title_grid" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relative_container_type_product_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/custom_bg_navy"
                    android:padding="8sp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp">

                    <TextView
                        android:id="@+id/textview_type_three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_title_grid" />
                </RelativeLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/textview_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Imbal Hasil"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linear_type_product"
                android:layout_marginLeft="@dimen/margin_side"
                android:layout_marginRight="@dimen/margin_side"
                android:layout_marginTop="@dimen/margin_side"
                android:textSize="@dimen/font_title_grid"
                android:textColor="@color/black"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linear_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textview_result">
                <RelativeLayout
                    android:id="@+id/relative_container_result_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/custom_bg_green"
                    android:padding="8sp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp">

                    <TextView
                        android:id="@+id/textview_result_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_title_grid" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relative_container_result_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/custom_bg_violet"
                    android:padding="8sp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp">

                    <TextView
                        android:id="@+id/textview_result_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_title_grid" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relative_container_result_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/custom_bg_navy"
                    android:padding="8sp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp">

                    <TextView
                        android:id="@+id/textview_result_three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_title_grid" />
                </RelativeLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/textview_manage_fund"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dana Kelolaan"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linear_result"
                android:layout_marginLeft="@dimen/margin_side"
                android:layout_marginRight="@dimen/margin_side"
                android:layout_marginTop="@dimen/margin_side"
                android:textSize="@dimen/font_title_grid"
                android:textColor="@color/black"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linear_manage_fund"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textview_manage_fund">
                <RelativeLayout
                    android:id="@+id/relative_container_manage_fund_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/custom_bg_green"
                    android:padding="8sp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp">

                    <TextView
                        android:id="@+id/textview_manage_fund_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_title_grid" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relative_container_manage_fund_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/custom_bg_violet"
                    android:padding="8sp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp">

                    <TextView
                        android:id="@+id/textview_manage_fund_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
